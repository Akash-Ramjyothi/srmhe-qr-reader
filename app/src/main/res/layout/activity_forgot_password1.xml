<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity1"
    android:background="#142850">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:background="@drawable/forgot_password_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="331sp"
        android:layout_height="80sp"
        android:background="@drawable/username_edittext"
        android:ems="10"
        android:hint="Enter Username"
        android:inputType="textPersonName"
        android:paddingLeft="70sp"
        android:paddingTop="0sp"
        android:paddingBottom="20sp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.407" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="331sp"
        android:layout_height="80sp"
        android:background="@drawable/srm_he_id"
        android:ems="10"
        android:hint="Enter SRM HE ID"
        android:inputType="textPersonName"
        android:paddingLeft="70sp"
        android:paddingTop="0sp"
        android:paddingBottom="20sp"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.284" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="331sp"
        android:layout_height="80sp"
        android:background="@drawable/confirm_password"
        android:ems="10"
        android:hint="Enter Confirm Password"
        android:inputType="textPassword"
        android:paddingLeft="60sp"
        android:paddingTop="0sp"
        android:paddingBottom="20sp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.652" />

    <EditText
        android:id="@+id/password_edittext"
        android:layout_width="331sp"
        android:layout_height="80sp"
        android:background="@drawable/password_edittext"
        android:ems="10"
        android:hint="Enter New Password"
        android:inputType="textPassword"
        android:paddingLeft="60sp"
        android:paddingTop="0sp"
        android:paddingBottom="20sp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529" />

    <Button
        android:id="@+id/ForgotPasswordSubmitButton"
        android:layout_width="226sp"
        android:layout_height="82sp"
        android:background="@drawable/reset_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.845" />

</androidx.constraintlayout.widget.ConstraintLayout>