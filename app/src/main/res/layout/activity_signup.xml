<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#142850"
    tools:context=".SignupActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="203sp"
        android:layout_height="73sp"
        android:background="@drawable/signup_on_signup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181" />

    <Button
        android:id="@+id/to_signin"
        android:layout_width="170sp"
        android:layout_height="65sp"
        android:background="@drawable/signin_on_signup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.199"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="331sp"
        android:layout_height="80sp"
        android:background="@drawable/username_edittext"
        android:ems="10"
        android:hint="Enter New Username"
        android:inputType="textPersonName"
        android:paddingLeft="60sp"
        android:paddingTop="0sp"
        android:paddingBottom="20sp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.482" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="331sp"
        android:layout_height="80sp"
        android:background="@drawable/srm_he_id"
        android:ems="10"
        android:hint="Enter New SRM HE ID"
        android:inputType="textPersonName"
        android:paddingLeft="60sp"
        android:paddingTop="0sp"
        android:paddingBottom="20sp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.359" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="331sp"
        android:layout_height="80sp"
        android:background="@drawable/confirm_password"
        android:ems="10"
        android:hint="Enter Confirm Password"
        android:inputType="textPassword"
        android:paddingLeft="60sp"
        android:paddingTop="0sp"
        android:paddingBottom="20sp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.728" />

    <EditText
        android:id="@+id/password_edittext"
        android:layout_width="331sp"
        android:layout_height="80sp"
        android:background="@drawable/password_edittext"
        android:ems="10"
        android:hint="Enter New Password"
        android:inputType="textPassword"
        android:paddingLeft="60sp"
        android:paddingTop="0sp"
        android:paddingBottom="20sp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.605" />

    <Button
        android:id="@+id/SignUpButton"
        android:layout_width="235sp"
        android:layout_height="100sp"
        android:background="@drawable/signup_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.613"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.933" />

</androidx.constraintlayout.widget.ConstraintLayout>